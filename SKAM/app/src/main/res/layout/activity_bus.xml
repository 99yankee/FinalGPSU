<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/idk"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kmbru_000.skam.BusActivity"
    android:background="@drawable/gradient_blue">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/include">
    </include>


    <Button
        android:layout_width="fill_parent"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:text="BusTracker Beta"
        android:id="@+id/selectRoute"
        android:onClick="launchSelectRoute"
        android:layout_above="@+id/routeMap"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/button_shaded"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Help"
        android:id="@+id/button"
        android:onClick="launchHelp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/button_shaded"/>

    <Button
        android:textAllCaps="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bus Routes Map (PDF)"
        android:id="@+id/routeMap"
        android:onClick="launchMap"
        android:layout_above="@+id/schedules"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/button_shaded"/>

    <Button
        android:textAllCaps="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Bus Schedules"
        android:onClick="launchSchedules"
        android:id="@+id/schedules"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/button_shaded"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:id="@+id/imageView4"
        android:src="@drawable/busimage"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/selectRoute"
        android:layout_marginBottom="3dp"/>

</RelativeLayout>
