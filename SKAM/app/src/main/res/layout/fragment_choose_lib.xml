                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/lawicon"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/linearlayout2"
            android:weightSum="2"
            android:layout_weight="1"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true">
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Geology"
                android:id="@+id/geology"
                android:layout_weight="1"
                android:background="@drawable/button_pressable"
                android:textColor="#d0000066"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="Law"
                android:id="@+id/law"
                android:layout_weight="1"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_pressable"
                android:textColor="#d0000066"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayoutc"
            android:weightSum="2"
            android:layout_weight="1"
            android:divider="#d0000066"
            android:dividerPadding="2dp">

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton5"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/slocumicon"/>
            <ImageButton
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton6"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/simsicon"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:weightSum="2"
            android:layout_weight="1"
            android:id="@+id/linearlayout3"
            android:layout_below="@+id/linearlayout2"
            android:layout_alignParentStart="true">
            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Architecture"
                android:id="@+id/architecture"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/geology"
                android:layout_weight="1"
                android:background="@drawable/button_pressable"
                android:textColor="#d0000066"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="MLK Jr."
                android:id="@+id/mlk"
                android:layout_alignStart="@+id/law"
                android:layout_weight="1"
                android:background="@drawable/button_pressable"
                android:textColor="#d0000066"/>
        </LinearLayout>

    </LinearLayout>



