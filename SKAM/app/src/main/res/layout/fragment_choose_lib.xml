<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kmbru_000.skam.CoverPageActivity"
    android:background="@drawable/lightblue_gradient"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="8"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayoutd"
            android:weightSum="2"
            android:layout_weight="1"
            android:divider="#d0000066"
            android:dividerPadding="2dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="\n     SU &amp; ESF \n     Libraries"
                android:id="@+id/textView2"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:textColor="#fff"
                android:textStyle="bold"/>

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton7"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/moonicon"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:weightSum="3"
            android:layout_weight="1"
            android:id="@+id/linearlayout4"
            android:layout_below="@+id/linearlayout3"
            android:layout_alignParentStart="true">

            <Space
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Moon (ESF)"
                android:id="@+id/moon"
                android:layout_alignBottom="@+id/law"
                android:layout_alignStart="@+id/mlk"
                android:layout_weight="1"
                android:background="@drawable/button_pressable"
                android:textColor="#d0000066"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayouta"
            android:weightSum="2"
            android:layout_weight=".75"
            android:divider="#d0000066"
            android:dividerPadding="2dp">

            <ImageButton
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/birdicon"/>
            <ImageButton
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@drawable/carnegieicon"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
